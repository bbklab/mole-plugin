#!/usr/bin/env perl
use strict;
use warnings;
use utf8;
use Net::POP3;
use Time::HiRes;
use Benchmark ':hireswallclock';
use Locale::Messages qw (textdomain bindtextdomain gettext nl_putenv);
binmode(STDIN, ":encoding(utf8)");
binmode(STDOUT, ":encoding(utf8)");
binmode(STDERR, ":encoding(utf8)");
binmode STDOUT, ':raw';

# return codes
our ($state_ok,$state_warn,$state_crit,$state_unkn,$state_noop) = (0,1,2,3,4);

# return stuff
our ($rc, $result) = (0,'');

our $eminfo = '/usr/local/eminfo/eminfo';
our $filename = (split /\//, __FILE__)[-1];

# check eminfo
unless (-f $eminfo && -x $eminfo) {
  printf "{unknown}:{str}:{$eminfo not prepared.}";
  exit $state_unkn;
}

# read eminfo locale_def
our $localdir = '/usr/local/eminfo/share/locale/';
open my $fh, "$eminfo printdef LOCALE_DIR 2>&- |";
if($fh){
  while(<$fh>){
        chomp; $localdir = $_;
        last;
  }
}

# read plugin locale setting
our $locale = 'zh_CN.UTF-8';
open $fh, "$eminfo view $filename locale 2>&- |";
if($fh){
  while(<$fh>){
        chomp; $locale = $_;
        last;
  }
  if(!defined $locale || $locale eq ''){
        open my $fh1, "$eminfo view default locale 2>&- |";
        if($fh1){
                while(<$fh1>){
                        chomp; $locale = $_;
                        last;
                }
        }
  }
}
if(!defined $locale || $locale eq ''){
        $locale = 'zh_CN.UTF-8';
}elsif($locale eq 'zh_CN' || $locale eq 'zh_CN.UTF-8' || $locale eq 'zh'){
        $locale = 'zh_CN.UTF-8';
}elsif($locale eq 'en_US' || $locale eq 'en_US.UTF-8' || $locale eq 'en'){
        $locale = 'en_US.UTF-8';
}else{
        $locale = 'zh_CN.UTF-8';
}
nl_putenv("LANGUAGE=$locale");

# set textdomain; bindtextdomain
sub _ ($) { &gettext; }
textdomain "$filename";
bindtextdomain "$filename", "$localdir";

# read plugin config here
our $addr_port = '127.0.0.1:110';
open $fh, "$eminfo view $filename addr_port 2>&- |";
if ($fh) {
  while(<$fh>){
  	chomp; $addr_port = $_;
	last;
  }
}

our $time_out = 10;
open $fh, "$eminfo view $filename time_out 2>&- |";
if ($fh) {
  while(<$fh>){
  	chomp; $time_out = $_;
 	last;
  }
} 
$time_out = 10 if ($time_out =~ m/\D/ || !defined $time_out);

our $pop_user = '';
open $fh, "$eminfo view $filename pop_user 2>&- |";
if ($fh) {
  while(<$fh>){
  	chomp; $pop_user = $_;
  	last
  }
}

our $pop_pass = '';
open $fh, "$eminfo view $filename pop_pass 2>&- |";
if ($fh) {
  while(<$fh>){
  	chomp; $pop_pass = $_;
	last;
  }
}

# Main body begin
my ($total,$critnum,$unknnum) = (0,0,0);
my ($time_start,$time_stop,$time_duration);

$result = sprintf(_"check list: %s ### ### ",$addr_port);

my @addr_pair = split /\s+/, $addr_port;
while(@addr_pair) {
  $total++;
  my ($pop_host, $pop_port) = (split /:/, shift @addr_pair)[0,1];
  if (!defined $pop_host || !defined $pop_port) {
	$result .= sprintf(_"<font color=yellow> pop_host or pop_port not defined </font> ### ### ");
	$unknnum++;
	next;
  }
  if ($pop_port =~ /\D/) {
	$result .= sprintf(_"<font color=yellow> %s:%d pop port not numberic </font> ### ### ",$pop_host,$pop_port,);
	$unknnum++;
	next;
  }

  $time_start = Benchmark->new();
  my $pop=Net::POP3->new(
	Host    =>	$pop_host,
	Port	=> 	$pop_port,
	Timeout =>	($time_out =~ /\D/)?10:$time_out,
  );
  unless (defined $pop) {
	if ($@) {
		$@ =~ s/[\r\n]//g;
		$result .= sprintf(_"<font color=red> connect [%s:%d] failed in %d seconds, return [%s] </font> ",$pop_host,$pop_port,$time_out,$@);
	} else {
		$result .= sprintf(_"<font color=red> connect [%s:%d] failed in %d seconds </font> ",$pop_host,$pop_port,$time_out);
	}
	$critnum++;
	goto ERREND;
  } else {
	my $welcome = $pop->banner();
	if ($welcome) {
		$welcome =~ s/[\r\n]//g;
		$time_stop = Benchmark->new();
		$time_duration = timestr(timediff($time_stop,$time_start),'noc');
		$time_duration = (split /\s+/, $time_duration )[0];
		$result .= sprintf(_"connect [%s:%d] return welcome banner: ### [%s] (%f seconds) ### ",$pop_host,$pop_port,$welcome,$time_duration);
		$time_start = Benchmark->new();		## reset time_start
	} else {
		$result .= sprintf(_"connect [%s:%d] didn't return welcome banner ### ",$pop_host,$pop_port);
		$critnum++;
		goto ERREND;
	}
  }
  if($pop_user && $pop_pass) {
	my ($rcode,$response);
	$pop->user($pop_user);
	$response = $pop->message();
	$response =~ s/[\r\n]//g if defined $response;
	$rcode = $pop->code();
	unless (defined $rcode && $rcode =~ m/\A2/) {
		$rcode = '' if (!defined $rcode);
		$response = '' if (!defined $response);
		$result .= sprintf(_"<font color=red> pop command: USER return [code=%d message=%s] </font> ",$rcode,$response);
		$critnum++;
		goto ERREND;
	} else {
		$time_stop = Benchmark->new();
		$time_duration = timestr(timediff($time_stop,$time_start),'noc');
		$time_duration = (split /\s+/, $time_duration )[0];
		$response = '' if (!defined $response);
		$result .= sprintf(_"pop command: USER return [code=%d message=%s] (%f seconds) ### ",$rcode,$response,$time_duration);
		$time_start = Benchmark->new();         ## reset time_start
	}
	$pop->pass($pop_pass);
	$response = $pop->message();
	$response =~ s/[\r\n]//g if defined $response;
	$rcode = $pop->code();
	unless (defined $rcode && $rcode =~ m/\A2/) {
		$rcode = '' if (!defined $rcode);
		$response = '' if (!defined $response);
		$result .= sprintf(_"<font color=red> pop command: PASS return [code=%d message=%s] </font> ",$rcode,$response);
		$critnum++;
		goto ERREND;
	} else {
		$time_stop = Benchmark->new();
		$time_duration = timestr(timediff($time_stop,$time_start),'noc');
		$time_duration = (split /\s+/, $time_duration )[0];
		$result .= sprintf(_"pop command: PASS return [code=%d message=Authorized Success] (%f seconds) ### ### ",$rcode,$time_duration);
		$time_start = Benchmark->new();         ## reset time_start
	}
  } else {
	$result .= sprintf(_" pop_user or pop_pass not defined, pop login test skip ### ### ");
  }
  next;

  ERREND: {
	$time_stop = Benchmark->new();
	$time_duration = timestr(timediff($time_stop,$time_start),'noc');
	$time_duration = (split /\s+/, $time_duration )[0];
	$result .= sprintf(_" (%f seconds) ### ### ",$time_duration);
	next;
  }
}
# prepare last output
if ($critnum > 0) {
  printf _"{crit}:{str}:{ POP SVR CRITICAL | %d/%d pop check critical | %s }",$critnum,$total,$result;
  exit $state_crit;
} elsif ($unknnum > 0) {
  printf _"{unknown}:{str}:{ POP SVR UNKNOWN | %d/%d pop check unknown | %s }",$unknnum,$total,$result;
  exit $state_unkn;
} else {
  printf _"{ok}:{str}:{ POP SVR OK | %d/%d pop check success | %s }",$total,$total,$result;
  exit $state_ok;
}
